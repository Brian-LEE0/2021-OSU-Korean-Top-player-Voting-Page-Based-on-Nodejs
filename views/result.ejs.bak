<%- include ("./layout/top") %>
<style>
	.btn-wrapper {
		display: none;
	}
	th,td {
		padding: 1rem;
	}
	
	td {
		color: white;
	}
	th {
		background: white;
		text-align: center;
	}
	tr:nth-child(2) td {
		font-weight: bold;
		color: yellow !important;
	}
	.vote_title {
		z-index: 999;
	}
	.black-bg {
		position: absolute;
		width: 100%;
		height: 100%;
		background: black;
		opacity: 0.2;
		z-index: 999;
	}
	h1 {
		color: white;
		font-size: 5rem;
	}
	
	abc {
		color: white;
		font-size: 3rem;
		text-align : right;
	}
	.content-bg {
		background: gray;
	}
	table {
		margin-top: 1rem;
	}
	
	table * {
		font-size: 24px;
	}
</style>
    <div class="vote_title">
        <h1>VOTE RESULT</h1>
        <div class="black-bg ">
            <div class="content-bg">
            </div>
        </div>
    </div>
	<abc>TOTAL : <%= db1 %></abc>
    <table width="100%" border="1">
        <tr>
            <th>RANK</th>
            <th>NAME</th>
            <th>ID</th>
            <th>POINT</th>
            <th>COUNT</th>
        </tr>
        <% data.forEach(function (item, index) { %>
            <tr>
                <td>
                    <%= item.ranking %>
                </td>
                <td>
                    <%= item.name %>
                </td>
                <td>
                    <%= item.candidate_id %>
                </td>
                <td>
                    <%= item.pt %>
                </td>
                <td>
                    <%= item._count %>
                </td>
            </tr>
            <% }); %>
    </table>
</body>

</html>